<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.spring.learning.Address" table="address" schema="system">
        <id name="pincode" type="int">
            <column name="pincode" precision="5" scale="0" />
        </id>
        <property name="city" type="string">
            <column name="city" length="20" not-null="true" />
        </property>
        <property name="state" type="string">
            <column name="state" length="20" not-null="true" />
        </property>
        <property name="country" type="string">
            <column name="country" length="20" not-null="true" />
        </property>
    </class>
</hibernate-mapping>